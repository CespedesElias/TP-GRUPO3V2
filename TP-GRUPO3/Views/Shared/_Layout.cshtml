@{
    var usuario = Context.Items["Usuario"] as Usuario;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ORTumentaria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container-fluid" id="nav">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color:floralwhite">Inicio</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (usuario != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Producto" asp-action="Index" style="color:floralwhite" id="prodNav">Producto</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Index" style="color:floralwhite" id="usuarioNav">Usuario</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Carrito" asp-action="Index" style="color:floralwhite" id="carritoNav">Carrito</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy" style="color:floralwhite" id="privNav">Privacidad</a>
                            </li>                   
                            <li class="nav-item">
                                <form asp-controller="Sesion" asp-action="Logout" method="post">
                                    <button type="submit" class="btn botonVerde btn-secondary ">Cerrar sesión</button>
                                </form>
                            </li>
                        }

                        else{
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Sesion" asp-action="Index">Iniciar sesión</a>
                            </li>
                        }
                        
                        

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - TP_GRUPO3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src ="~/js/cambioNav.js"> </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
